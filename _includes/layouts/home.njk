    <script>
      var animateGrass = function() {
        var grasses = document.querySelectorAll('.grass');
        var startTime = Date.now();
        var amplitude = 4; // degree of rotation
        var speed = 500; // yeah; that's speed (higher = slower)
        var offsetBetweenTufts = (i) => i * 0.5; // higher means more variation

        function sway() {
          var elapsed = Date.now() - startTime;

          grasses.forEach(function(grass, index) {
            // Offset each grass tuft for more natural movement
            var offset = offsetBetweenTufts(index);
            // Slow oscillation with small amplitude
            var angle = Math.sin((elapsed / speed) + offset) * amplitude;
            grass.style.transform = 'rotate(' + angle + 'deg)';
          });

          requestAnimationFrame(sway);
        }

        sway();
      };

      document.addEventListener('DOMContentLoaded', animateGrass);

    </script>
